{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@my-app/env": ["apps/my-app/src/environments/environment"],
      "@my-app/data/*": ["apps/my-app/src/app/data/*"],
      "@my-app/presentation/*": ["apps/my-app/src/app/presentation/*"],
      "@my-app/domain/*": ["apps/my-app/src/app/domain/*"],
      "@my-app/login/data/*": ["apps/my-app/src/app/presentation/pages/login/data/*"],
      "@my-app/login/presentation/*": ["apps/my-app/src/app/presentation/pages/login/presentation/*"],
      "@my-app/login/domain/*": ["apps/my-app/src/app/presentation/pages/login/domain/*"],
      "@core/data/plugin/NativeHttp": [
        "libs/core/data/plugin/native-http/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
